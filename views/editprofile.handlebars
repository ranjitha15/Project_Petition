<!--EDIT USER PROFILE -->
<div class="container">
  <h1>Account Settings</h1>

  <form class="" action="/profile/edit" method="post">

    <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <div class = "container container-smaller-margin">
<!-- NAME-->
    <div class="input">
      <label for="first">First Name</label>
      <input type="text" name="first" value="{{data.first_name}}">
    </div>

    <div class="input">
      <label for="last">Last Name</label>
      <input type="text" name="last" value="{{data.last_name}}">
    </div>
<!-- EMAIL&PASSWORD-->
    <div class="input">
      <label for="email">Email Address</label>
      <input type="text" name="email" value="{{data.email}}">
    </div>

    <div class="input">
      <label for="password">Password</label>
      <input type="text" name="password" value="">
    </div>
<!--AGE,CITY&HOMEPAGE -->
      <div class="input">
        <label for="age">Age</label>
        <input type="text" name="age" value="{{data.age}}">
      </div>

    <div class="input">
      <label for="city">City</label>
      <input type="text" name="city" value="{{data.city}}">
    </div>

    <div class="input">
      <label for="homepage">Homepage</label>
      <input type="text" name="url" value="{{data.url}}">
    </div>

  </div><!--container-smaller-margin -->

  <br>

    <button class = "button" type="submit" name="button"><i class="fa fa-pencil"></i>Update</button>

  </form>

</div>
